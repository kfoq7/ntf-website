---
import Section from './Section.astro'
import { sellers } from '@/data'
---

<Section title="Best Sellers">
  <div class="mt-10 mb-20 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-[30px]">
    {
      sellers.map(({ name, amount, profilePhoto }) => {
        return (
          <div class="bg-white p-4 flex items-center gap-4 rounded-2xl cursor-pointer shadow-md transition-all ease-in-out delay-300 hover:shadow-lg">
            <img src={profilePhoto} alt={name} class="w-16" />
            <div>
              <h4 class="text-lg font-semibold">{name}</h4>
              <p class="mt-1">{amount}</p>
            </div>
          </div>
        )
      })
    }
  </div>
</Section>
