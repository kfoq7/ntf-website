---
import Section from '@/components/Section.astro'
import Bitcoin from '@/icons/Bitcoin.astro'
import { categories, crypts } from '@/data'
---

<Section title="Super Hot NTFs">
  <div class="mt-10 mb-4 flex flex-wrap gap-4 md:flex-nowrap">
    {
      categories.map(({ name, link }) => (
        <a
          href={link}
          class="bg-gray-200 py-2 px-3.5 text-[15px] rounded-2xl transition-all ease-in-out delay-300 hover:text-white hover:bg-blue-900"
        >
          {name}
        </a>
      ))
    }
  </div>

  <ul class="grid grid-cols-[repeat(auto-fit,minmax(250px,1fr))] gap-5 md:px-10">
    {
      crypts.map(({ title, price, items, totalItems, time, thumbnail }) => (
        <li class="p-5 bg-white rounded-2xl shadow-sm transition-all ease-in-out delay-300 cursor-pointer hover:shadow-lg">
          <img src={thumbnail} alt="item-1" class="size-[280px] rounded-2xl" />

          <div class="py-3 flex items-end justify-between border-b">
            <div>
              <h5 class="text-lg font-semibold">{title}</h5>
              <div class="mt-2.5 flex items-center gap-[5px]">
                <Bitcoin />
                <p class="text-xs">{price} BTC</p>
              </div>
            </div>
            <span class="text-xs text-gray-400">
              {items} of {totalItems}
            </span>
          </div>
          <div class="py-3.5 pb-1 flex items-center justify-between">
            <p class="bg-gray-200 py-1.5 px-2.5 text-[13px] rounded-lg">{time}</p>
            <a
              href="#"
              class="py-1.5 px-2.5 text-[13px] rounded-lg bg-transparent font-bold text-blue-700 transition-all ease-in-out duration-300 hover:text-white hover:bg-black"
            >
              Place a Bid
            </a>
          </div>
        </li>
      ))
    }
  </ul>

  <div class="mt-8 mb-12 flex items-center justify-center">
    <button
      class="py-2.5 px-5 bg-gray-200 rounded-[10px] transition-all ease-in-out delay-300 hover:text-white hover:bg-blue-800"
    >
      View More
    </button>
  </div>
</Section>
